extends layout

block content
  header#top
    .container
      span.entypo-alert.logo
      h1 Stash Video
      p.lead Report street crime. Save the world.
      a.btn.btn-default(href='#upload') Let's Do This!
  section#upload
    .container
      form.input-group(method='post', enctype='multipart/form-data')
        .view#location
          label Where are you?
          br
          a.btn.btn-default.btn-location(href='#', onclick='navigator.geolocation.getCurrentPosition(success, error)') Get Location
          br
          span.location
          br
        .view#record
          // input#record(type='button', value='Record a Video')
          label What's the problem?
          br
          label.btn.btn-default(for='capture') Catch or Upload a Video
          input#capture(type='file', name='videoInput', accept='video/*', capture='camcorder')
        .view#problem
          br
          .btn-group-vertical  
            input.btn.btn-default(type='button', name='problem', value='Police Brutality')
            input.btn.btn-default(type='button', name='problem', value='Street Harassment')
            input.btn.btn-default(type='button', name='problem', value='Other')
        .view
          br
          label Summarize the problem
          br
          textarea(placeholder='Describe what you saw.')
        .view#submit
          input#recipientId(type='hidden', name='recipientId', value='7f46085a-ea38-4cc1-b477033861c20d76')
          input#sessionId(type='hidden', name='sessionId', value='PvluMOqNN+Aht4MmplXvr1tmLLPWNNg3liBum9y5unpS3XAu+mjD2+iHehI/gXfjDTkU8r8f/ar73FOytxK6IEb0yedUISInitFxI2zQ8A7VdwPjTGmZRdEI6Bg1BnyB')
          input.btn.btn-success(type='submit', value='Submit')
  section#thanks
    .container
      h1 Thanks!
      p.lead Your report will be taken seriously.
